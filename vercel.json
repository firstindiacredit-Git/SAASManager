{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://browsey.vercel.app https://crm.pizeonfly.com http://localhost:* https://localhost:*"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://browsey.vercel.app https://crm.pizeonfly.com http://localhost:* https://localhost:*"
        }
      ]
    }
  ],
  "rewrites": [
    { 
      "source": "/((?!api/.*).*)", 
      "destination": "/" 
    }
  ]
}